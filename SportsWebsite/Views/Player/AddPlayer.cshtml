@using SportsWebsite.ViewModels;
@model AddPlayerViewModel;
@{
    ViewData["Title"] = "Add Player";
    Layout = "_Layout";
}


 <div class="card-body">
     <div class="col-lg-12">
         <div class="input-box">
             <form id="AddForm" asp-controller="Player" asp-action="AddPlayer" method="post">
                 <div class="form-group">
                     <label class="form-label-small">Player Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="AddPlayerName" placeholder="Enter Player Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                 </div>
                 <div class="form-group">
                     <label class="form-label-small">Player Birth Date</label>
                    <input type="date" asp-for="DateOfBirth" class="form-control" id="DateOfBirth" placeholder="Enter Player Birth Date">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                 </div>
                <div class="form-group">
                    <label asp-for="Name" style="font-size: 16px;">Player Team</label>
                    <select asp-for="TeamId" id="TeamId" class="form-control">
                        <option>Select Team...</option>
                        @foreach (var item in Model.Teams)
                        {
                            <option value="@item.TeamId"> @item.Name </option>
                        }
                    </select>
                    <span asp-validation-for="Teams" class="text-danger"></span>
                </div>
                 <button type="submit" class="btn btn-primary-inverse" id="AddBtn" style="background-color: darkslategray ; color : white">
                     Add
                 </button>
             </form>
         </div>
     </div>
 </div>
<script>

    document.getElementById("DateOfBirth").value = "";
    var currentDate = new Date().toISOString().split('T')[0];
    document.getElementById("DateOfBirth").setAttribute("max", currentDate);
</script>